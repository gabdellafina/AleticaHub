# AtleticaHub Environment Configuration
# Copy this file to .env and fill in your actual values

# App Configuration
NODE_ENV=development
PORT=3001

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_BASE_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Firebase Emulator Configuration (for development)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=logs

# Third-party Integrations
PAYMENT_PROVIDER_API_KEY=your_payment_api_key
PAYMENT_PROVIDER_SECRET=your_payment_secret

# Admin Configuration
ADMIN_EMAIL=admin@atleticahub.com
ADMIN_PHONE=+1234567890

# Feature Flags
ENABLE_CHAT=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
